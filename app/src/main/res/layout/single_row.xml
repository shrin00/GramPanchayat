<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/single_row_id">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/kg"
            android:id="@+id/image_id"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heloooooo"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/image_id"
            android:layout_marginLeft="10dp"
            android:id="@+id/heading_id"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="20sp"
            android:layout_toRightOf="@id/id_rs"
            android:layout_below="@id/heading_id"
            android:layout_marginLeft="1dp"
            android:id="@+id/decription_id"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs."
            android:layout_toRightOf="@id/image_id"
            android:layout_below="@id/heading_id"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/id_rs"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>